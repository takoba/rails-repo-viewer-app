<p id="notice"><%= notice %></p>

<h1>Saved Issues</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Repo name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_issues.each do |saved_issue| %>
      <tr>
        <td><%= saved_issue.user_name %></td>
        <td><%= saved_issue.repo_name %></td>
        <td><%= link_to 'Show', saved_issue %></td>
        <td><%= link_to 'Edit', edit_saved_issue_path(saved_issue) %></td>
        <td><%= link_to 'Destroy', saved_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved Issue', new_saved_issue_path %>
